<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Contrib.KubeClient.ServiceCatalog</AssemblyName>
    <RootNamespace>Contrib.KubeClient.ServiceCatalog</RootNamespace>
    <LangVersion>7.3</LangVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <OutputPath>..\..\artifacts</OutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PublishRepositoryUrl>True</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>AXOOM GmbH</Authors>
    <Copyright>Copyright (c) AXOOM GmbH</Copyright>
    <Description>Client library for Kubernetes Service Catalog</Description>
    <PackageProjectUrl>https://github.com/AXOOM/Contrib.KubeClient.ServiceCatalog</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>Kubernetes;Client;Service Catalog</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Contrib.KubeClient.CustomResources" Version="0.19.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
